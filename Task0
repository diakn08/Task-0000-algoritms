import java.util.Scanner;

public class Task0 {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
         if (sc.hasNextLine()) {
            String line = sc.nextLine();

            if (line.isEmpty()) {
                System.out.println(0);
            }

             else {
                String[] words = line.split("\\s+");
                System.out.println(words.length);
            }
        }

        sc.close();
        
    }
}
